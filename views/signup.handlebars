<header class="intro-header" style="background-image:url('/assets/images/signup.png')">
		<div class="container">
				<div class="row">
						<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
								<div class="site-heading">
										<h1>Sign Up</h1>
										<span class="subheading"></span>
								</div>
						</div>
				</div>
		</div>
</header>
<div class="container">

<div class="col-sm-6 col-sm-offset-3 signUpInput">


	<!-- show any messages that come back with authentication -->
  <!-- handlebars -->
  {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
  {{/if}}
	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label>Username</label>
			<input type="text" class="form-control" placeholder="Username" name="username">
		</div>


		<div class="form-group">
			<label>Email</label>
			<input type="email" class="form-control" placeholder="example@example.com" name="email">
		</div>


		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" placeholder="password" name="password">
		</div>

		<div class="form-group">
			<label>Confirm Password</label>
			<input type="password" class="form-control" placeholder="confirm password" name="password2">
		</div>

		<div class="form-group">
			<label>First Name</label>
			<input type="text" class="form-control" placeholder="First name" name="firstname">
		</div>

		<div class="form-group">
			<label>Last Name</label>
			<input type="text" class="form-control"  placeholder="Last name" name="lastname">
		</div>

    <div class="form-group">
			<label>Gender</label>
			<input type="text" class="form-control"  placeholder="Gender" name="gender">
		</div>

    <div class="form-group">
			<label>Age</label>
			<input type="text" class="form-control" placeholder="Age" name="age">
		</div>

    <div class="form-group">
			<label>Weight</label>
			<input type="text" class="form-control" placeholder="Weight(lb)" name="weight">
		</div>

    <div class="form-group">
			<label>Fitness Goal</label>
			<input type="text" class="form-control" placeholder="Fitness Goal" name="goals">
		</div>



		<button type="submit" class="btn btn-default">Sign Up</button>
	</form>

	<!-- <hr>
	<p>Already have an account? <a href="/login">Login</a></p>
	<p>Or go <a href="/">home</a>.</p> -->

</div>

</div>
